[AI]
# Choose the AI provider: 'aws-bedrock' or 'openai'
provider = aws-bedrock

# Model ID to use (e.g., 'anthropic.claude-3-sonnet-20240229-v1:0' for AWS Bedrock,
# or 'gpt-3.5-turbo' for OpenAI)
model_id = anthropic.claude-3-sonnet-20240229-v1:0

# Maximum number of tokens for the AI response
max_tokens = 300

# Temperature for controlling randomness (0.0 to 1.0)
temperature = 0.3

# Prompt for generating commit messages
commit_message_prompt = Generate a concise and informative commit message based on the following git diff:

{diff}

The commit message should:
1. Start with a summary in imperative mood
2. Explain the 'why' behind changes, when possible. Don't make anything up.
3. Keep the summary under 50 characters
4. Use bullet points for multiple changes

[AWS]
# AWS profile name to use for authentication
profile_name = default

[OpenAI]
# OpenAI API key (leave empty and set in your personal config)
api_key = 

# You can add more sections or options as needed for future expansions